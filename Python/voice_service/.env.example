# Hana Voice Service - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# NEXT.JS API CONFIGURATION
# ============================================================================

# URL of the Next.js application API
# Development: http://localhost:3000
# Production: https://your-nextjs-app.railway.app
NEXTJS_API_URL=http://localhost:3000

# Shared secret for service-to-service authentication
# IMPORTANT: Must match JWT_SECRET_KEY in Next.js .env
# Generate with: openssl rand -base64 32
VOICE_SERVICE_SECRET=your_shared_secret_key_here_change_this

# ============================================================================
# VOICE MODELS CONFIGURATION
# ============================================================================

# Path to Vosk Arabic STT model (500MB)
# Default: models/vosk-model-ar-0.22-linto-1.1.0
VOSK_MODEL_PATH=models/vosk-model-ar-0.22-linto-1.1.0

# Coqui TTS model for Arabic
# Default: tts_models/multilingual/multi-dataset/xtts_v2
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2

# ============================================================================
# AUDIO PROCESSING
# ============================================================================

# Sample rate for audio processing (Hz)
# IMPORTANT: Vosk requires 16000 Hz
SAMPLE_RATE=16000

# Audio format for processing
AUDIO_FORMAT=wav

# ============================================================================
# MAQSAM TELEPHONY (Optional)
# ============================================================================

# Maqsam pre-shared token for authentication
# Only needed if using Maqsam telephony integration
MAQSAM_TOKEN=your_maqsam_token_here

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed voice processing logs
VERBOSE_LOGGING=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Maximum concurrent voice processing sessions
MAX_CONCURRENT_SESSIONS=10

# Voice processing timeout (seconds)
PROCESSING_TIMEOUT=30

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable development mode features
DEV_MODE=true

# Skip model loading for faster startup (testing only)
SKIP_MODEL_LOADING=false
