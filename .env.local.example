# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Authentication & Security (REQUIRED - Generate secure values)
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here

# Voice Service Integration (OPTIONAL - Add your values if using voice features)
VOICE_SERVICE_URL=http://hana-voice-service:8000
VOICE_SERVICE_SECRET=hana_voice_shared_secret_2024_secure_key

# Additional Environment Variables
NODE_ENV=production
PORT=3000

# For voice service (Python/voice_service/.env)
LOG_LEVEL=INFO
MAX_CONCURRENT_SESSIONS=10
RATE_LIMIT_PER_MINUTE=60
VOSK_MODEL_PATH=models/vosk-model-ar-0.22-linto-1.1.0
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
SAMPLE_RATE=16000
AUDIO_FORMAT=wav
PROCESSING_TIMEOUT=30
SKIP_MODEL_LOADING=false
